@model HelloWorldMvcApp.Models.Student

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			
			<div class="form-group">
				<label asp-for="StudentName" class="control-label"></label>
				<input asp-for="StudentName" class="form-control" />
				<span asp-validation-for="StudentName" class="text-danger"></span>
		   @Html.ValidationMessageFor(Model=>Model.StudentName, "", new { @class = "text-danger" })
			</div>

			<div class="form-group">
				<label asp-for="StudentAge" class="control-label"></label>
				<input asp-for="StudentAge" class="form-control" />
				<span asp-validation-for="StudentAge" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="StudentAddress" class="control-label"></label>
				<input asp-for="StudentAddress" class="form-control" />
				<span asp-validation-for="StudentAddress" class="text-danger"></span>
			</div>

			<div class="form-group">
				@Html.DropDownListFor(m => m.StudentGender, new SelectList(Enum.GetValues(typeof(Gender))), "Select Gender")
			</div>

			<div class="form-group">
				@Html.DropDownListFor(m => m.StudentEnrolled, new SelectList(Enum.GetValues(typeof(Enrolled))), "Select Enrolled")
			</div>

			<div class="form-group">
				@Html.DropDownListFor(m => m.StudentGradeLevel, new SelectList(Enum.GetValues(typeof(Grade))), "Select Grade Level")
			</div>
			<div class="form-group">
				@Html.LabelFor(x => x.MyBooleanValue, "Pass")
				@Html.CheckBoxFor(x => x.MyBooleanValue)
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-default" />
			</div>
		</form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

